				<QueryText>SELECT
	DocumentCheck.Ref,
	DocumentCheck.DeletionMark,
	DocumentCheck.Number,
	DocumentCheck.Date,
	DocumentCheck.Posted,
	DocumentCheck.BankAccount,
	DocumentCheck.Memo,
