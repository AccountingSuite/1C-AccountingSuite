				<DynamicDataRead>true</DynamicDataRead>
				<QueryText>SELECT
	//------------------------------------------------------
	// Standard attributes
	BankReconciliation.Ref                        AS Ref,
	BankReconciliation.Presentation               AS Presentation,
	BankReconciliation.DataVersion                AS DataVersion,
	BankReconciliation.DeletionMark               AS DeletionMark,
	BankReconciliation.Posted                     AS Posted,
	BankReconciliation.Number                     AS Number,
	BankReconciliation.Date                       AS Date,
	BankReconciliation.PointInTime                AS PointInTime,
	//------------------------------------------------------
	// Attributes
	BankReconciliation.BankAccount                AS BankAccount,
	CASE
		WHEN BankReconciliation.BankAccount.CreditCard
			THEN -BankReconciliation.BeginningBalance
		ELSE BankReconciliation.BeginningBalance
	END                                           AS BeginningBalance,
	CASE
		WHEN BankReconciliation.BankAccount.CreditCard
			THEN -BankReconciliation.ClearedAmount
		ELSE BankReconciliation.ClearedAmount
	END                                           AS ClearedAmount,
	CASE
		WHEN BankReconciliation.BankAccount.CreditCard
			THEN -BankReconciliation.ClearedBalance
		ELSE BankReconciliation.ClearedBalance
	END                                           AS ClearedBalance,
	CASE
		WHEN BankReconciliation.BankAccount.CreditCard
			THEN -BankReconciliation.Difference
		ELSE BankReconciliation.Difference
	END                                           AS Difference,
	CASE
		WHEN BankReconciliation.BankAccount.CreditCard
			THEN -BankReconciliation.EndingBalance
		ELSE BankReconciliation.EndingBalance
	END                                           AS EndingBalance,
	CAST (BankReconciliation.Memo AS STRING(200)) AS Memo,
	//------------------------------------------------------
	// External IDs
	BankReconciliation.payments                   AS payments,
	BankReconciliation.deposits                   AS deposits
	//------------------------------------------------------
FROM
	Document.BankReconciliation AS BankReconciliation
</QueryText>
