				<QueryText>SELECT
	// Standard attributes
	DocumentPurchaseInvoice.Ref,
	DocumentPurchaseInvoice.DataVersion,
	DocumentPurchaseInvoice.DeletionMark,
	DocumentPurchaseInvoice.Number,
	DocumentPurchaseInvoice.Date,
	DocumentPurchaseInvoice.PointInTime,
	DocumentPurchaseInvoice.Posted,
	// Document attributes
	DocumentPurchaseInvoice.Company,
	DocumentPurchaseInvoice.CompanyCode,
	DocumentPurchaseInvoice.Currency,
	DocumentPurchaseInvoice.ExchangeRate,
	DocumentPurchaseInvoice.PriceIncludesVAT,
	DocumentPurchaseInvoice.Location,
	DocumentPurchaseInvoice.DeliveryDate,
	DocumentPurchaseInvoice.Project,
	DocumentPurchaseInvoice.Class,
	DocumentPurchaseInvoice.ManualAdjustment,
	// Document totals
	DocumentPurchaseInvoice.DocumentTotal,
	DocumentPurchaseInvoice.DocumentTotalRC,
	DocumentPurchaseInvoice.VATTotal,
	DocumentPurchaseInvoice.VATTotalRC,
	// Order status
	CASE
		WHEN DocumentPurchaseInvoice.DeletionMark THEN
			 VALUE(Enum.OrderStatuses.Deleted)
		WHEN NOT DocumentPurchaseInvoice.Posted THEN
			 VALUE(Enum.OrderStatuses.Draft)
		WHEN OrdersStatuses.Status IS NULL THEN
			 VALUE(Enum.OrderStatuses.Open)
		WHEN OrdersStatuses.Status = VALUE(Enum.OrderStatuses.EmptyRef) THEN
			 VALUE(Enum.OrderStatuses.Open)
		ELSE
			 OrdersStatuses.Status
	END AS OrderStatus
FROM
	Document.PurchaseInvoice AS DocumentPurchaseInvoice
		LEFT JOIN InformationRegister.OrdersStatuses.SliceLast AS OrdersStatuses
		ON DocumentPurchaseInvoice.Ref = OrdersStatuses.Order</QueryText>
