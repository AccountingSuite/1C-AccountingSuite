				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>Status</v8:content>
				</v8:item>
			</title>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT
	TimeTrack.Ref,
	TimeTrack.Company,
	TimeTrack.Project,
	TimeTrack.Task,
	TimeTrack.Price,
	TimeTrack.TimeComplete,
	TimeTrack.User,
	TimeTrack.Memo,
	TimeTrack.DateFrom,
	TimeTrack.SalesInvoice,
	TimeTrack.Class,
	TimeTrack.SalesOrder,
	TimeTrack.InvoiceStatus
FROM
	Document.TimeTrack AS TimeTrack
WHERE
	TimeTrack.DeletionMark = FALSE
{WHERE
	(TimeTrack.Date BETWEEN &amp;BeginOfPeriod AND &amp;EndOfPeriod),
	(TimeTrack.InvoiceStatus = &amp;InvoiceStatus)}</query>
	</dataSet>
	<calculatedField>
		<dataPath>Amount</dataPath>
		<expression>Price * TimeComplete</expression>
