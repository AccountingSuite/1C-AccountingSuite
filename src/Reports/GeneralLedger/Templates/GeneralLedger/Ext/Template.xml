		<query>SELECT
	GeneralJournalBalanceAndTurnovers.Account,
	2 AS SectionOrder,
	GeneralJournalBalanceAndTurnovers.Recorder.PointInTime,
	GeneralJournalBalanceAndTurnovers.LineNumber,
	GeneralJournalBalanceAndTurnovers.Recorder,
	GeneralJournalBalanceAndTurnovers.AmountRCTurnover,
	GeneralJournalBalanceAndTurnovers.AmountRCOpeningBalance,
	GeneralJournalBalanceAndTurnovers.AmountRCClosingBalance
INTO GeneralJournalBalanceAndTurnovers
FROM
	AccountingRegister.GeneralJournal.BalanceAndTurnovers({(&amp;BeginOfPeriod)}, {(&amp;EndOfPeriod)}, Auto, , , , ) AS GeneralJournalBalanceAndTurnovers
WHERE
	GeneralJournalBalanceAndTurnovers.Recorder &lt;&gt; UNDEFINED
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	GeneralJournalBalanceAndTurnovers.Recorder,
	MAX(GeneralJournalBalanceAndTurnovers.LineNumber) AS LineNumber
INTO SplitTableA
FROM
	GeneralJournalBalanceAndTurnovers AS GeneralJournalBalanceAndTurnovers

GROUP BY
	GeneralJournalBalanceAndTurnovers.Recorder

HAVING
	MAX(GeneralJournalBalanceAndTurnovers.LineNumber) = 2
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	GeneralJournalBalanceAndTurnovers.Recorder,
	GeneralJournalBalanceAndTurnovers.LineNumber,
	GeneralJournalBalanceAndTurnovers.Account
INTO SplitTable
FROM
	GeneralJournalBalanceAndTurnovers AS GeneralJournalBalanceAndTurnovers
		INNER JOIN SplitTableA AS SplitTableA
		ON GeneralJournalBalanceAndTurnovers.Recorder = SplitTableA.Recorder
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	GeneralJournalBalanceAndTurnovers.Account,
	GeneralJournalBalanceAndTurnovers.SectionOrder,
	GeneralJournalBalanceAndTurnovers.RecorderPointInTime,
	GeneralJournalBalanceAndTurnovers.LineNumber,
	GeneralJournalBalanceAndTurnovers.Recorder,
	GeneralJournalBalanceAndTurnovers.AmountRCTurnover,
	GeneralJournalBalanceAndTurnovers.AmountRCOpeningBalance,
	GeneralJournalBalanceAndTurnovers.AmountRCClosingBalance,
	ISNULL(SplitTable.Account, "-Split-") AS Split
INTO GeneralJournalBalanceAndTurnoversAndSplit
FROM
	GeneralJournalBalanceAndTurnovers AS GeneralJournalBalanceAndTurnovers
		LEFT JOIN SplitTable AS SplitTable
		ON GeneralJournalBalanceAndTurnovers.Recorder = SplitTable.Recorder
			AND GeneralJournalBalanceAndTurnovers.LineNumber &lt;&gt; SplitTable.LineNumber
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	GeneralJournalBalanceAndTurnoversAndSplit.Account AS Account,
	GeneralJournalBalanceAndTurnoversAndSplit.SectionOrder AS SectionOrder,
	COUNT(GeneralJournalBalanceAndTurnovers.Recorder) AS RecorderOrder,
	GeneralJournalBalanceAndTurnoversAndSplit.Recorder AS Recorder,
	GeneralJournalBalanceAndTurnoversAndSplit.AmountRCTurnover AS AmountRCTurnover,
	GeneralJournalBalanceAndTurnoversAndSplit.AmountRCOpeningBalance AS AmountRCOpeningBalance,
	GeneralJournalBalanceAndTurnoversAndSplit.AmountRCClosingBalance AS AmountRCClosingBalance,
	GeneralJournalBalanceAndTurnoversAndSplit.Split,
	CAST(GeneralJournalBalanceAndTurnoversAndSplit.Recorder.Memo AS STRING(1024)) AS RecorderMemo,
	GeneralJournalBalanceAndTurnoversAndSplit.Account AS AccountFilter
FROM
	GeneralJournalBalanceAndTurnoversAndSplit AS GeneralJournalBalanceAndTurnoversAndSplit
		INNER JOIN GeneralJournalBalanceAndTurnovers AS GeneralJournalBalanceAndTurnovers
		ON GeneralJournalBalanceAndTurnoversAndSplit.Account = GeneralJournalBalanceAndTurnovers.Account
			AND (CASE
				WHEN GeneralJournalBalanceAndTurnoversAndSplit.RecorderPointInTime = GeneralJournalBalanceAndTurnovers.RecorderPointInTime
						AND GeneralJournalBalanceAndTurnoversAndSplit.LineNumber &gt;= GeneralJournalBalanceAndTurnovers.LineNumber
					THEN TRUE
				ELSE GeneralJournalBalanceAndTurnoversAndSplit.RecorderPointInTime &gt; GeneralJournalBalanceAndTurnovers.RecorderPointInTime
			END)

GROUP BY
	GeneralJournalBalanceAndTurnoversAndSplit.Recorder,
	GeneralJournalBalanceAndTurnoversAndSplit.Account,
	GeneralJournalBalanceAndTurnoversAndSplit.SectionOrder,
	GeneralJournalBalanceAndTurnoversAndSplit.AmountRCTurnover,
	GeneralJournalBalanceAndTurnoversAndSplit.AmountRCOpeningBalance,
	GeneralJournalBalanceAndTurnoversAndSplit.AmountRCClosingBalance,
	GeneralJournalBalanceAndTurnoversAndSplit.Split,
	CAST(GeneralJournalBalanceAndTurnoversAndSplit.Recorder.Memo AS STRING(1024)),
	GeneralJournalBalanceAndTurnoversAndSplit.Account

UNION ALL

SELECT
	GeneralJournalBalance.Account,
	1,
	1,
	UNDEFINED,
	0,
	0,
	GeneralJournalBalance.AmountRCBalance,
	"",
	"",
	GeneralJournalBalance.Account
FROM
	AccountingRegister.GeneralJournal.Balance({(&amp;BeginOfPeriod)}, , , ) AS GeneralJournalBalance</query>
