		<dataSource>DataSource1</dataSource>
		<query>SELECT
	PurchaseInvoiceLineItems.Ref.Company,
	PurchaseInvoiceLineItems.LocationActual AS Location,
	PurchaseInvoiceLineItems.Product AS Item,
	PurchaseInvoiceLineItems.QtyUM AS Qty,
	PurchaseInvoiceLineItems.LineTotal * CASE
		WHEN PurchaseInvoiceLineItems.Ref.ExchangeRate &gt; 0
			THEN PurchaseInvoiceLineItems.Ref.ExchangeRate
		ELSE 1
	END AS Amount
FROM
	Document.PurchaseInvoice.LineItems AS PurchaseInvoiceLineItems
WHERE
	PurchaseInvoiceLineItems.Ref.Posted = TRUE
	AND PurchaseInvoiceLineItems.Ref.DeletionMark = FALSE
{WHERE
	(PurchaseInvoiceLineItems.Ref.Date BETWEEN &amp;BeginOfPeriod AND &amp;EndOfPeriod),
	(PurchaseInvoiceLineItems.LocationActual = &amp;Location)}

UNION ALL

SELECT
	PurchaseReturnLineItems.Ref.Company,
	PurchaseReturnLineItems.Ref.Location,
	PurchaseReturnLineItems.Product,
	-PurchaseReturnLineItems.QtyUM,
	-PurchaseReturnLineItems.LineTotal * CASE
		WHEN PurchaseReturnLineItems.Ref.ExchangeRate &gt; 0
			THEN PurchaseReturnLineItems.Ref.ExchangeRate
		ELSE 1
	END
FROM
	Document.PurchaseReturn.LineItems AS PurchaseReturnLineItems
WHERE
	PurchaseReturnLineItems.Ref.Posted = TRUE
	AND PurchaseReturnLineItems.Ref.DeletionMark = FALSE
{WHERE
	(PurchaseReturnLineItems.Ref.Date BETWEEN &amp;BeginOfPeriod AND &amp;EndOfPeriod),
	(PurchaseReturnLineItems.Ref.Location = &amp;Location)}</query>
