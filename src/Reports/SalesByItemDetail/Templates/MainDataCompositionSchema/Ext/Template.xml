	CashSaleLineItems.Product,
	CashSaleLineItems.Ref.Location,
	CashSaleLineItems.Ref.Company,
	CashSaleLineItems.QtyUM,
	CashSaleLineItems.LineTotal * CashSaleLineItems.Ref.ExchangeRate,
	CASE
		WHEN CashSaleLineItems.QtyUM &gt; 0
			THEN CashSaleLineItems.LineTotal / CashSaleLineItems.QtyUM
		ELSE CashSaleLineItems.PriceUnits / CASE
				WHEN CashSaleLineItems.Unit.Factor &gt; 0
					THEN CashSaleLineItems.Unit.Factor
				ELSE 1
			END
	END * CashSaleLineItems.Ref.ExchangeRate,
	CashSaleLineItems.Ref.Memo
FROM
	Document.CashSale.LineItems AS CashSaleLineItems
WHERE
	CashSaleLineItems.Ref.Posted = TRUE
	AND CashSaleLineItems.Ref.DeletionMark = FALSE
{WHERE
	(CashSaleLineItems.Ref.Date BETWEEN &amp;BeginOfPeriod AND &amp;EndOfPeriod),
	(CashSaleLineItems.Ref.Location = &amp;Location)}

UNION ALL

SELECT
	SalesReturnLineItems.Ref,
	SalesReturnLineItems.Product,
	SalesReturnLineItems.Ref.Location,
	SalesReturnLineItems.Ref.Company,
	-SalesReturnLineItems.QtyUM,
	-SalesReturnLineItems.LineTotal * SalesReturnLineItems.Ref.ExchangeRate,
	-CASE
		WHEN SalesReturnLineItems.QtyUM &gt; 0
			THEN SalesReturnLineItems.LineTotal / SalesReturnLineItems.QtyUM
		ELSE SalesReturnLineItems.PriceUnits / CASE
				WHEN SalesReturnLineItems.Unit.Factor &gt; 0
					THEN SalesReturnLineItems.Unit.Factor
				ELSE 1
			END
	END * SalesReturnLineItems.Ref.ExchangeRate,
	SalesReturnLineItems.Ref.Memo
FROM
	Document.SalesReturn.LineItems AS SalesReturnLineItems
WHERE
	SalesReturnLineItems.Ref.Posted = TRUE
