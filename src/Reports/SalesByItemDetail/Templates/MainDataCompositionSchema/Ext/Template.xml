		<query>SELECT
	SalesInvoiceLineItems.Ref AS Recorder,
	SalesInvoiceLineItems.Product AS Item,
	SalesInvoiceLineItems.LocationActual AS Location,
	SalesInvoiceLineItems.Ref.Company AS Company,
	SalesInvoiceLineItems.QtyUM AS Qty,
	SalesInvoiceLineItems.LineTotal * SalesInvoiceLineItems.Ref.ExchangeRate AS Amount,
	CASE
		WHEN SalesInvoiceLineItems.QtyUM &gt; 0
			THEN SalesInvoiceLineItems.LineTotal / SalesInvoiceLineItems.QtyUM
		ELSE SalesInvoiceLineItems.PriceUnits / CASE
				WHEN SalesInvoiceLineItems.Unit.Factor &gt; 0
					THEN SalesInvoiceLineItems.Unit.Factor
				ELSE 1
			END
	END * SalesInvoiceLineItems.Ref.ExchangeRate AS SalesPrice,
	SalesInvoiceLineItems.Ref.Memo
FROM
	Document.SalesInvoice.LineItems AS SalesInvoiceLineItems
WHERE
	SalesInvoiceLineItems.Ref.Posted = TRUE
	AND SalesInvoiceLineItems.Ref.DeletionMark = FALSE
{WHERE
	(SalesInvoiceLineItems.Ref.Date BETWEEN &amp;BeginOfPeriod AND &amp;EndOfPeriod),
	(SalesInvoiceLineItems.LocationActual = &amp;Location)}

UNION ALL

