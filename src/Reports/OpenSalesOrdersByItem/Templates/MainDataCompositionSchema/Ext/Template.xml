		<dataSource>DataSource1</dataSource>
		<query>SELECT
	OrdersRegisteredBalance.Order,
	OrdersRegisteredBalance.Product AS Item,
	OrdersRegisteredBalance.Location AS Location,
	OrdersRegisteredBalance.DeliveryDate AS DueDate,
	OrdersRegisteredBalance.Project AS Project,
	OrdersRegisteredBalance.Class AS Class,
	OrdersRegisteredBalance.QuantityBalance AS Qty,
	CASE
		WHEN OrdersRegisteredBalance.Product.Type = VALUE(Enum.InventoryTypes.Inventory)
			THEN CASE
					WHEN OrdersRegisteredBalance.QuantityBalance &gt; OrdersRegisteredBalance.ShippedBalance
						THEN OrdersRegisteredBalance.QuantityBalance - OrdersRegisteredBalance.ShippedBalance
					ELSE 0
				END
		ELSE CASE
				WHEN OrdersRegisteredBalance.QuantityBalance &gt; OrdersRegisteredBalance.InvoicedBalance
					THEN OrdersRegisteredBalance.QuantityBalance - OrdersRegisteredBalance.InvoicedBalance
				ELSE 0
			END
	END AS Backorder,
	OrdersRegisteredBalance.ShippedBalance AS Shipped,
	OrdersRegisteredBalance.InvoicedBalance AS Invoiced,
	SalesOrderLineItems.Price,
	SalesOrderLineItems.LineTotal
INTO TT
FROM
	AccumulationRegister.OrdersRegistered.Balance({(&amp;P)}, {(Order.Date BETWEEN &amp;BeginOfPeriod AND &amp;EndOfPeriod)}) AS OrdersRegisteredBalance
		LEFT JOIN Document.SalesOrder.LineItems AS SalesOrderLineItems
		ON OrdersRegisteredBalance.Order = SalesOrderLineItems.Ref
			AND OrdersRegisteredBalance.Product = SalesOrderLineItems.Product
			AND OrdersRegisteredBalance.Location = SalesOrderLineItems.Location
			AND OrdersRegisteredBalance.DeliveryDate = SalesOrderLineItems.DeliveryDate
			AND OrdersRegisteredBalance.Project = SalesOrderLineItems.Project
			AND OrdersRegisteredBalance.Class = SalesOrderLineItems.Class
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	TT.Order,
	TT.Item,
	TT.Item.Type AS ItemType,
	TT.Item.Category,
	TT.Item.PreferredVendor,
	TT.DueDate,
	TT.Order.Company AS Customer,
	TT.Qty,
	TT.Shipped,
	TT.Invoiced,
	TT.Backorder,
	TT.LineTotal AS Amount,
	TT.Backorder * TT.Price AS OpenBalance
FROM
	TT AS TT
WHERE
	CASE
			WHEN TT.Item.Type = VALUE(Enum.InventoryTypes.Inventory)
				THEN NOT(TT.Qty = TT.Shipped
							AND TT.Qty = TT.Invoiced)
			WHEN TT.Item.Type = VALUE(Enum.InventoryTypes.NonInventory)
				THEN NOT TT.Qty = TT.Invoiced
			ELSE TRUE
		END

ORDER BY
	TT.Order.PointInTime</query>
