		<dataSource>DataSource1</dataSource>
		<query>SELECT
	InventoryJournalBalanceAndTurnovers.Recorder AS Document,
	InventoryJournalBalanceAndTurnovers.Recorder.Company AS CustomerVendor,
	InventoryJournalBalanceAndTurnovers.Product AS Item,
	InventoryJournalBalanceAndTurnovers.QuantityTurnover AS Qty,
	InventoryJournalBalanceAndTurnovers.AmountTurnover AS Cost,
	InventoryJournalBalanceAndTurnovers.QuantityClosingBalance AS OnHand,
	CASE
		WHEN InventoryJournalBalanceAndTurnovers.QuantityClosingBalance &lt;= 0
			THEN 0
		ELSE CASE
				WHEN InventoryJournalBalanceAndTurnovers.Product.PricePrecision = 3
					THEN CAST(InventoryJournalBalanceAndTurnovers.AmountClosingBalance / InventoryJournalBalanceAndTurnovers.QuantityClosingBalance AS NUMBER(17, 3))
				WHEN InventoryJournalBalanceAndTurnovers.Product.PricePrecision = 4
					THEN CAST(InventoryJournalBalanceAndTurnovers.AmountClosingBalance / InventoryJournalBalanceAndTurnovers.QuantityClosingBalance AS NUMBER(17, 4))
				ELSE CAST(InventoryJournalBalanceAndTurnovers.AmountClosingBalance / InventoryJournalBalanceAndTurnovers.QuantityClosingBalance AS NUMBER(17, 2))
			END
	END AS AvgCost,
	InventoryJournalBalanceAndTurnovers.QuantityClosingBalance * CASE
		WHEN InventoryJournalBalanceAndTurnovers.QuantityClosingBalance &lt;= 0
			THEN 0
		ELSE CAST(InventoryJournalBalanceAndTurnovers.AmountClosingBalance / InventoryJournalBalanceAndTurnovers.QuantityClosingBalance AS NUMBER(17, 2))
	END AS AssetValue
INTO InventoryJournalBalanceAndTurnovers
FROM
	AccumulationRegister.InventoryJournal.BalanceAndTurnovers({(&amp;BeginOfPeriod)}, {(&amp;EndOfPeriod)}, Auto, , {(Product = &amp;Item)}) AS InventoryJournalBalanceAndTurnovers
WHERE
	(InventoryJournalBalanceAndTurnovers.QuantityTurnover &lt;&gt; 0
			OR InventoryJournalBalanceAndTurnovers.AmountTurnover &lt;&gt; 0)
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	MAX(InventoryJournalBalanceAndTurnovers.Document.Date) AS DocumentDate,
	InventoryJournalBalanceAndTurnovers.Item
INTO LastDocument
FROM
	InventoryJournalBalanceAndTurnovers AS InventoryJournalBalanceAndTurnovers

GROUP BY
	InventoryJournalBalanceAndTurnovers.Item
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	InventoryJournalBalanceAndTurnovers.Document AS Document,
	InventoryJournalBalanceAndTurnovers.CustomerVendor,
	InventoryJournalBalanceAndTurnovers.Item,
	InventoryJournalBalanceAndTurnovers.Qty,
	InventoryJournalBalanceAndTurnovers.Cost,
	InventoryJournalBalanceAndTurnovers.OnHand,
	InventoryJournalBalanceAndTurnovers.AvgCost,
	InventoryJournalBalanceAndTurnovers.AssetValue,
	CASE
		WHEN InventoryJournalBalanceAndTurnovers.Document.Date = LastDocument.DocumentDate
			THEN InventoryJournalBalanceAndTurnovers.OnHand
		ELSE 0
	END AS LastOnHand,
	CASE
		WHEN InventoryJournalBalanceAndTurnovers.Document.Date = LastDocument.DocumentDate
			THEN InventoryJournalBalanceAndTurnovers.AssetValue
		ELSE 0
	END AS LastAssetValue
FROM
	InventoryJournalBalanceAndTurnovers AS InventoryJournalBalanceAndTurnovers
		LEFT JOIN LastDocument AS LastDocument
		ON InventoryJournalBalanceAndTurnovers.Item = LastDocument.Item

ORDER BY
	InventoryJournalBalanceAndTurnovers.Document.PointInTime</query>
