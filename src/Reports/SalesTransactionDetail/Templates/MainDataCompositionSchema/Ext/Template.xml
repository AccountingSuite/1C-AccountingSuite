		<dataSource>DataSource1</dataSource>
		<query>SELECT
	2 AS SectionOrder,
	GeneralJournalTurnovers.ExtDimension1 AS Company,
	GeneralJournalTurnovers.AmountRCTurnover AS Transaction,
	NULL AS BeginningBalance,
	NULL AS EndingBalance,
	GeneralJournalTurnovers.Recorder
FROM
	AccountingRegister.GeneralJournal.Turnovers(, , Auto, , , ) AS GeneralJournalTurnovers
WHERE
	GeneralJournalTurnovers.Account.AccountType = VALUE(Enum.AccountTypes.AccountsReceivable)
	AND GeneralJournalTurnovers.ExtDimension1.Customer = TRUE
{WHERE
	(GeneralJournalTurnovers.ExtDimension1 = &amp;Company)}

UNION ALL

SELECT
	1,
	Companies.Ref,
	NULL,
	ISNULL(GJBegBalTurn.AmountRCOpeningBalance, 0),
	NULL,
	NULL
FROM
	Catalog.Companies AS Companies
		LEFT JOIN AccountingRegister.GeneralJournal.BalanceAndTurnovers(, , Auto, , , , ) AS GJBegBalTurn
		ON Companies.Ref = GJBegBalTurn.ExtDimension1
WHERE
	Companies.Customer = TRUE
{WHERE
	(Companies.Ref = &amp;Company)}

UNION ALL

SELECT
	3,
	Companies.Ref,
	NULL,
	NULL,
	ISNULL(GJEndBalTurn.AmountRCClosingBalance, 0),
	NULL
FROM
	Catalog.Companies AS Companies
		LEFT JOIN AccountingRegister.GeneralJournal.BalanceAndTurnovers(, , Auto, , , , ) AS GJEndBalTurn
				ON Companies.Ref = GJEndBalTurn.ExtDimension1
WHERE
	Companies.Customer = TRUE
{WHERE
	(Companies.Ref = &amp;Company)}</query>
