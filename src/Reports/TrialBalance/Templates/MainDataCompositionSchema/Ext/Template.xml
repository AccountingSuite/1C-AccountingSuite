	GeneralJournalBalancesAndTurnovers.AmountRCTurnoverCr,
	GeneralJournalBalancesAndTurnovers.AmountRCClosingSplittedBalanceDr,
	GeneralJournalBalancesAndTurnovers.AmountRCClosingSplittedBalanceCr
